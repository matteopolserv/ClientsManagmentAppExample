@model FormModel

<h2 class="card-title">Informacje na temat sklepu cz 2/2</h2>


<form asp-controller="ClientForm" method="post" role="form" class="form-control">

    <input asp-for="ClientName" type="hidden" />
    <input asp-for="ClientEmail" type="hidden" />
    <input asp-for="ClientPhone" type="hidden" />
    <input type="hidden" asp-for="Service" />
    <input asp-for="Deadline" type="hidden" />

    <input asp-for="HasWebSite" type="hidden" />
    @if (Model.HasWebSite == true)
    {
        <label asp-for="WebSiteAddress" class="form-label">Adres obecnego sklepu</label>
        <input asp-for="WebSiteAddress" class="form-control" />
    }

    <input asp-for="HasDomain" type="hidden" />
    @if (Model.HasDomain == true)
    {
        <label asp-for="DomainName" class="form-label">Nazwa i operator domeny</label>
        <input asp-for="DomainName" class="form-control" />
    }

    <input asp-for="HasHosting" type="hidden" />
    @if (Model.HasHosting == true)
    {
        <label asp-for="HostingName" class="form-label">Dostawca i pakiet hostingowy</label>
        <input asp-for="HostingName" class="form-control" />
    }

    <p></p>

    <input asp-for="HasVisualProject" type="hidden" />
    @if (Model.HasVisualProject == "no")
    {
        <label asp-for="VisualProjectDesc" class="form-label">Proszę opisać oczekiwania wobec projektu graficznego</label>
        <textarea id="editor" asp-for="VisualProjectDesc" class="form-control"><p></p></textarea>
    }
    @if (Model.HasVisualProject == "owngraphic")
    {
        <label asp-for="VisualProjectDesc" class="form-label">Proszę o informację w jakiej formie projekt graficzny zostanie dostarczony</label>
        <textarea id="editor" asp-for="VisualProjectDesc" class="form-control"><p></p></textarea>
    }
    @if (Model.HasVisualProject == "tamplate")
    {
        <label asp-for="VisualProjectDesc" class="form-label">Proszę o wskazanie wybranego szablonu</label>
        <textarea id="editor" asp-for="VisualProjectDesc" class="form-control"><p></p></textarea>
    }
    @if (Model.HasVisualProject == "yes")
    {
        <label asp-for="VisualProjectDesc" class="form-label">Proszę o informację gdzie można zapoznać się z gotowym projektem</label>
        <textarea id="editor" asp-for="VisualProjectDesc" class="form-control"><p></p></textarea>
    }

    <p></p>

  

        <label asp-for="ShopDesc" class="form-label">
            Proszę o wskazanie wybranej platformy (WooCommerce, Prestashop, Shopify, inny lub dedykowany - przygotowany pod specjalne zamówienie klienta) oraz o krótki opis: płatności, przesyłek i innych integracji, np. z Allegro, Baselinker (wtyczki, funkcje, szabalony), a zwłaszcza FUNKCJI CHARAKTERYSTYCZNYCH I NIETYPOWYCH w celu przedstawienia propozycji<br />

        <textarea id="editor2" asp-for="ShopDesc" class="form-control"><p></p></textarea>
        </label>
 
    <p></p>
    <label asp-for="Notices" class="form-label">Uwagi</label>
    <textarea id="editor3" asp-for="Notices" class="form-control"><p></p></textarea>
    <p></p>
    <button type="submit" class="btn-primary" asp-action="ShopForm" asp-controller="ClientForm">Wstecz</button>
    <button type="submit" class="btn-primary" asp-action="ShopFormSummary" asp-controller="ClientForm">Podusmowanie</button>

</form>
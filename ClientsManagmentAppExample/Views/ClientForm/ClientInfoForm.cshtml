    <input type="radio" value="Repair" asp-for="Service" class="form-check-input" /> Naprawa strony lub aplikacji
    <p></p>
    <input type="radio" value="Upgrade" asp-for="Service" class="form-check-input" /> Rozbudowa strony lub aplikacji
*@
<p></p>
<label asp-for="ClientName" class="form-label">Imię i nazwisko osoby do kontaktu lub nazwa firmy</label>
<input asp-for="ClientName" class="form-control" required />
    
<label asp-for="ClientEmail" class="form-label">Adres email</label>
<input asp-for="ClientEmail" class="form-control" required />

<label asp-for="ClientPhone" class="form-label">Numer telefonu</label>
<input asp-for="ClientPhone" class="form-control" required />

<label asp-for="Deadline" class="form-label">Termin wykonania projektu</label>
<input asp-for="Deadline" class="form-control" required />

<p></p>
    <button type="submit" class="btn-primary">Dalej</button>
    

</form>
